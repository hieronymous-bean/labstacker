<section class="block-wrapper shadow-white">

			<div class="list-line-posts">
				<div class="container">

					<div class="owl-wrapper">
						<div class="owl-carousel" data-num="4">

							{{#get "posts" filter="featured:true" include="tags" limit="5" as |featured|}}
								{{#if featured}}
	      					{{#foreach featured}}

	      					<div class="item list-post">
										<img src="{{img_url feature_image size='l'}}" alt="{{title}}">
										<div class="post-content">
											{{#if primary_tag}}
                      	<a href="{{primary_tag.url}}">{{primary_tag.name}}</a>   
                  		{{/if}}
											<h2><a href="{{url}}">{{title}}</a></h2>
											<ul class="post-tags">
												<li><i class="fa fa-clock-o"></i>{{date format="D MMM YYYY"}}</li>
											</ul>
										</div>
									</div>

	      					{{/foreach}}	
								{{/if}}
							{{/get}}

						</div>
					</div>

				</div>
			</div>
		</section>